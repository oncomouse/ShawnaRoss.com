@import "bear_defaults";

@mixin splash {
  section nav .splash {
    background: url(<%= image_path('seascape.png') %>) no-repeat center bottom;
    background-size: cover;
  }
}
.caronia {
	background: url(<%= image_path('caronia.png') %>) no-repeat center;
  min-height: 500px;
}
.caronia-small {
	background: url(<%= image_path('caronia_lowres.png') %>) no-repeat center;
	min-height: 150px;
	min-width: 81px;
}

@include breakpoint($babyBearMQ) {
  .caronia-small {
		position: relative;
    &:before {
			display: block;
			position: absolute;
			top: -8px;
			z-index: -1;
			content: "";
			min-width: 188px;
			height: 165px;
			width: 100%;
			background: url(<%= image_path('burst_orange.png') %>) no-repeat top center;
    }
  }
}

@include breakpoint($mommyBearMQ) {
  @include splash;
}
