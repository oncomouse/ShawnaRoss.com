---
layout: blog
pageable: true
---
.articles
	.page_function
		:markdown
			## Articles tagged '#{tagname.capitalize}'

	- page_articles.each_with_index do |article, i|
		=partial "blog/article", :locals => { :short => true, :article => article, :index => i }

	= partial "blog/archive_navigation", :locals => { :paginate => paginate, :next_page => next_page, :prev_page => prev_page, :page_number => page_number, :num_pages => num_pages, :page_start => page_start, :page_end => page_end}